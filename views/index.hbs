

    <h1 style="color:white;">Onlyteams</h1>

    <main class="homePage">

      <section id="leftContainer">
        <div class="topPart"></div>
        <h1>Onlyteams</h1>
        <a href="/">Find Teams</a>
        <a href="/feed">Feed</a>
        <a href="">Messages</a>
        <a href="/createteam">Create A Team</a>
        <a href="/memories">Post A Memory</a>

      </section>

      <section id="middleContainer">
        <div class="topPart"></div>

        <h1>Find Teams</h1>
        <select name="team" class="team">
          {{#each teamList}}
            <option
              value="{{teamName}}{{tag}}{{location}}{{division}}"
              class="teamOption"
            >{{teamName}}</option>

          {{/each}}
        </select>

        <div class="teamsHere">

          {{#each teamList}}
            <div class="eachTeam">
              <a href="/teamplayers/{{_id}}">{{teamName}}</h1></a>
              <p>{{tag}}</p>
              <p>{{location}}</p>
              <p>{{division}}</p>
            </div>

          {{/each}}
        </div>

      </section>

      <section id="rightContainer">
        <div class="topPart"></div>

        <h1 class="mostRecent">Most Recent Posts</h1>
        {{#each feedList}}
          <img src="{{image}}" alt="" />
        {{/each}}
      </section>
    </main>

